<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <at.markushi.ui.CircleButton
        android:id="@+id/cb_icon_background"
        android:layout_width="@dimen/info_traffic_circle_width"
        android:layout_height="@dimen/info_traffic_circle_width"
        android:layout_gravity="center"
        app:cb_color="@color/red"
        app:cb_pressedRingWidth="4dip" />

    <TextView
        android:id="@+id/tv_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:text="Nearest Police\nStation"
        android:textSize="@dimen/ts_button"
        android:textStyle="bold" />

</LinearLayout>